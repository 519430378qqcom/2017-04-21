<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse"></style>

    <style name="Widget.Light" />

    <style name="Widget.Light.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid"></style>

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="Widget.Light.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <!-- umiwi 页面背景色 -->
    <style name="umiwi_a_f_bg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/umiwi_gray_f7</item>
    </style>

    <!-- 底栏按钮风格 -->
    <style name="bottombuttonstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/color_course_tab_textcolor</item>
        <item name="android:background">@drawable/course_tab_bg_selecter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="orangebuttonstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_course_tab_textcolor</item>
        <item name="android:background">@drawable/bottom_tab_space</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 详情页面分享及收藏 -->
    <style name="sharebuttonstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_bottom_detail_textcolor</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:background">@drawable/bottom_tab_space</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="favbuttonstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_bottom_tab_textcolor</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:background">@drawable/bottom_tab_space</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.UPPay" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 讲师列表名字水滴动画 -->
    <style name="popwindow_style">
        <item name="android:windowEnterAnimation">@anim/popwindow_enter</item>
        <item name="android:windowExitAnimation">@anim/popwindow_out</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/btn_toggle_bg</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="Widget.Button.Toggle.t" parent="android:Widget">
        <item name="android:background">@drawable/btn_toggle_bg</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="recommendSubscriptStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/umiwi_orange</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="recommendSubTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/square_gradual</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="recommendCourseTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="recommendImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="mypopuwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/popdismiss_anim</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">15sp</item>
    </style>


    <declare-styleable name="TintableImageView">
        <attr name="tint" format="reference|color" />
    </declare-styleable>

</resources>