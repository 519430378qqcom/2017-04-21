<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/umiwi_a_f_bg_style" >

    <include layout="@layout/toolbar_actionbar" />

    <TextView
        android:id="@+id/mycard_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_actionbar"
        android:layout_margin="8dp"
        android:layout_marginTop="12dp"
        android:text=""
        android:textColor="@color/umiwi_black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/mycard_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mycard_username"
        android:textColor="@color/umiwi_black"
        android:layout_margin="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/login_et_white_bg"
        android:hint="卡密或者兑换码"
        android:paddingLeft="5dp"
        android:textSize="18sp" >
    </EditText>

    <TextView
        android:id="@+id/mycard_btn"
        style="@style/Widget.Button.RedButton"
        android:layout_width="match_parent"
        android:layout_below="@+id/mycard_code"
        android:layout_margin="8dp"
        android:layout_marginTop="24dp"
        android:text="提交" />

    <ListView
        android:id="@+id/f_mycard_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mycard_btn"
        android:layout_marginTop="24dp"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="1dip"
        android:drawSelectorOnTop="true"
        android:fadingEdge="none"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:paddingLeft="1dip"
        android:paddingRight="1dip"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none"
        android:scrollingCache="true"
        android:smoothScrollbar="true" >
    </ListView>

</RelativeLayout>