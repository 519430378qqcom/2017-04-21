<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:background="@drawable/selectable_background_white_gray"
    android:orientation="horizontal" >

    <cn.youmi.framework.view.CircleImageView
        android:id="@+id/userhead_imageview"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_marginTop="8dp"
        app:ci_border_color="@color/white"
        app:ci_border_width="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:orientation="vertical" >
        <TextView
            android:text="最帅大哥"
            android:id="@+id/username_textview"
            style="@style/Widget.TextView.Item.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip" />

        <TextView
            android:text="想说什么就说点什么"
            android:id="@+id/content_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="4dp"
            android:minLines="2"
            android:textColor="@color/umiwi_gray_9"
            android:textSize="14sp" />

        <TextView
            android:text="2017-03-04 14:16"
            android:id="@+id/time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>