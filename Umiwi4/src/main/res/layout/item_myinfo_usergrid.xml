<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/line"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/download_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selectable_background_white_gray"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/down_mine_setting_background"
        android:gravity="center"
        android:padding="16dp"
        android:text="    下载    "
        android:textColor="@color/umiwi_gray_3"
        android:textSize="12sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/myrecord_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selectable_background_white_gray"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/recorde_mine_setting_background"
        android:gravity="center"
        android:padding="16dp"
        android:text="播放记录"
        android:textColor="@color/umiwi_gray_3"
        android:textSize="12sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/mycourse_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selectable_background_white_gray"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/mycourse_mine_setting_background"
        android:gravity="center"
        android:padding="16dp"
        android:text="我的课程"
        android:textColor="@color/umiwi_gray_3"
        android:textSize="12sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/myfav_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selectable_background_white_gray"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/myfav_mine_setting_background"
        android:gravity="center"
        android:padding="16dp"
        android:text="我的收藏"
        android:textColor="@color/umiwi_gray_3"
        android:textSize="12sp" />

</LinearLayout>