<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="13dip"
        android:layout_marginTop="15dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/umiwi_gray_3"
        android:textSize="18sp"
        android:text="还在等着房价下降吗？"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/video_watches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="7dip"
        android:text="播放次数"
        android:gravity="center_vertical"
        android:textColor="@color/umiwi_gray_9" />

    <LinearLayout
        android:id="@+id/description_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/course_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:background="@color/white"
            android:paddingBottom="12dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/umiwi_gray_9"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/more_detail_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/description_show_all_bg"
            android:scaleType="fitXY"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>