<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--第一个行家-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/expert_header_imageview"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/expert_right_layout_1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="1dp">

                <TextView

                    android:id="@+id/expert_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥299/年"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/main_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/expert_subscribe_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="7dp"
                    android:text="已订阅205" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/expert_right_layout_1"
                android:layout_toRightOf="@id/expert_header_imageview"
                android:orientation="vertical"
                android:paddingBottom="1dp"
                android:paddingTop="1dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/expert_name_textView_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="雷军 。精英日课"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/expert_context_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="帮你和全球精英大脑同步"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/expter_time_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/textview_fillet_bg"
                        android:ellipsize="end"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:text="17小时前更新"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/expter_detail_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="飞在互联网的猪"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#adadad" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#adadad" />

    </LinearLayout>

</LinearLayout>