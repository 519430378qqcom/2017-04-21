        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/special_right_layout_1"
            android:layout_toRightOf="@id/special_header_imageview_1"
            android:paddingBottom="1dp"
            android:paddingTop="1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/special_name_textView_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="雷军.精英日课"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/special_price_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="5dp"
                        android:text="¥299"
                        android:textColor="@color/main_color"
                        android:textSize="16sp" />

                </LinearLayout>

                <!--android:textColor="@color/black_a8"-->
                <TextView
                    android:id="@+id/special_context_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="帮你和全球精英大脑同步"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/expter_time_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview_orange_bg"
                        android:textColor="@color/main_color"
                        android:ellipsize="end"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:layout_marginRight="5dp"
                        android:text="17小时前更新"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/expter_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview_orange_bg"
                        android:textColor="@color/main_color"
                        android:ellipsize="end"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:text="融资"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/expter_detail_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:text="帮你和全球精英"
                        android:singleLine="true"
                        android:textColor="@color/black_alpf"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/special_subscribe_number_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="7dp"
                        android:text="播放12万"
                        android:textColor="@color/color_divider"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>




    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#adadad" />


