<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.umiwi.ui.fragment.login.LoginMemoryFragment">

    <include layout="@layout/toolbar_actionbar" />

    <ViewStub
        android:id="@+id/login_memory_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/fragment_login_memory_button" />

    <ViewStub
        android:id="@+id/login_youmi_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/fragment_login_youmi_view" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/umiwi_gray_f7"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="12dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0.05dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@color/umiwi_gray_e" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="选择其他登录方式"
            android:textColor="@color/umiwi_gray_b"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.05dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@color/umiwi_gray_e" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:background="@color/umiwi_gray_f7"
        android:gravity="top"
        android:orientation="horizontal"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/login_tv_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/logo_wechat"
            android:gravity="center"
            android:padding="2dp"
            android:text="微信登录"
            android:textColor="@color/umiwi_black"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/login_tv_qqzone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/logo_qq"
            android:gravity="center"
            android:padding="2dp"
            android:text="QQ登录"
            android:textColor="@color/umiwi_black"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/login_tv_sinaweibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/logo_sinaweibo"
            android:gravity="center"
            android:padding="2dp"
            android:text="微博登录"
            android:textColor="@color/umiwi_black"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/login_tv_umiwi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/icon_umiwi"
            android:gravity="center"
            android:padding="2dp"
            android:text="优米账号"
            android:textColor="@color/umiwi_black"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>