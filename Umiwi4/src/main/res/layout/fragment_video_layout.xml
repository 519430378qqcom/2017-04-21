<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/umiwi_gray_c" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">

        <TextView
            android:textSize="16sp"
            android:id="@+id/tv_all_one"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="全部"
            android:textColor="@color/umiwi_orange" />
        <!--android:textColor="@drawable/text_color_selector"-->

        <TextView
            android:layout_width="1dp"
            android:layout_height="6dp"
            android:layout_marginTop="3dp"
            android:background="@color/umiwi_gray_b" />

        <GridView
            android:visibility="visible"
            android:id="@+id/gv_one"
            android:numColumns="5"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </GridView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:textSize="16sp"
            android:id="@+id/tv_all_two"
            android:layout_width="60dp"
            android:gravity="center"
            android:textColor="@color/umiwi_orange"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="全部" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="6dp"
            android:layout_marginTop="3dp"
            android:background="@color/umiwi_gray_b" />

        <GridView
            android:id="@+id/gv_two"
            android:visibility="visible"
            android:numColumns="5"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </GridView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/umiwi_gray_c" />

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_all_three"
            android:layout_width="60dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/umiwi_orange"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:text="全部" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="6dp"
            android:layout_marginTop="3dp"
            android:background="@color/umiwi_gray_b" />

        <TextView
            android:id="@+id/tv_free"
            android:layout_width="65dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            android:textSize="16sp"
            android:text="免费" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="65dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:text="付费" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/bg_gray" />

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_new"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:text="最新"
            android:textSize="16sp"
            android:textColor="@color/umiwi_orange" />

        <TextView
            android:textSize="16sp"
            android:id="@+id/tv_host"
            android:layout_width="65dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            android:text="最热" />

        <TextView
            android:id="@+id/tv_good"
            android:gravity="center"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:text="好评" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/umiwi_gray_b" />
    <include layout="@layout/include_listview" />
</LinearLayout>