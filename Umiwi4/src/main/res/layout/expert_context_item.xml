<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/umiwi_white">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip">

        <ImageView
            android:id="@+id/expert_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp" />

        <RelativeLayout
            android:id="@+id/right_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/expert_image"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/name"
                style="@style/Widget.TextView.Item.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:ellipsize="marquee"
                android:lines="1"
                android:text="雷军" />

            <TextView
                android:id="@+id/dot"
                style="@style/Widget.TextView.Item.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/lecturer_titile"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/name"
                android:text="·" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:paddingTop="5dp">

                <LinearLayout
                    android:id="@+id/gap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/expert_tutorcolumn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="专栏(0人订阅)"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/expert_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:text="问答(0次回答)"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/gap"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/expert_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="音频(3)"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/expert_album"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="视频(36)"
                        android:textSize="14sp" />
                </LinearLayout>


            </RelativeLayout>


            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/title"
                style="@style/Widget.TextView.Item.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/dot"
                android:layout_toRightOf="@+id/dot"
                android:text="小米科技创始人小米科技创始人 " />

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/root"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/Index_backg" />

</RelativeLayout>