<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:src="@drawable/default_voice"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_toRightOf="@+id/tv_audio_title"
                android:background="@drawable/textview_fillet_question_bg"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/color_primary"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="9dp"
                android:text="199"
                android:textColor="@color/umiwi_orange"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_playtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_audio_title"
                android:layout_marginLeft="12dp"
                android:padding="3dp"
                android:text="04.15"
                android:textSize="14sp" />

            <TextView
            android:id="@+id/tv_dian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_audio_title"
            android:layout_toRightOf="@+id/tv_playtime"
            android:gravity="center"
            android:padding="1dp"
            android:text="." />

            <TextView
                android:id="@+id/tv_watchnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_audio_title"
                android:layout_toRightOf="@+id/tv_dian"
                android:padding="3dp"
                android:text="15"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_process"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_audio_title"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                android:text="已播15%"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_audio_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:text="破解时代"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>