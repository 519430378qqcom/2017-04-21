<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.umiwi.ui.view.MonitorScrollView
        android:id="@+id/mon_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="50dp">
         <ImageView
             android:padding="5dp"
             android:id="@+id/back"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/black_back"
             android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"
             />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="所有回答"
               android:textSize="20sp"
               android:textColor="@color/black"
               android:layout_centerInParent="true"
               />
     </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        />
     <com.umiwi.ui.view.CircleImageView
         android:id="@+id/header"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/icon_umiwi"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="10dp"
         />
      <TextView
          android:id="@+id/name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="吕钗"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="10dp"
          android:textColor="@color/black_alpf"
          />
    <TextView
        android:id="@+id/describe"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="优米公司技术负责人"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/obligation"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="优米公司技术负责人"
        android:textColor="@color/black_alpf"
        android:layout_gravity="center_horizontal"
        />
       <View
           android:layout_marginTop="5dp"
           android:layout_width="match_parent"
           android:layout_height="10dp"
            android:background="@color/line"
           />
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <TextView
               android:id="@+id/notice"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="提问须知"
               android:layout_marginRight="10dp"
               android:drawablePadding="2dp"
               android:drawableLeft="@drawable/notice_img"
               />
       </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
        <EditText
            android:id="@+id/et_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/ask_question"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="10px"
            android:background="@drawable/edittext_shape_rectangle"
            android:maxLines="80"
            android:paddingBottom="60dp"
            android:paddingLeft="5dp"
            android:textSize="15sp"
            />
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="/80"
                       />

            </LinearLayout>
        </RelativeLayout>
      <RelativeLayout
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/question1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="￥1提问"
              android:background="@drawable/button_red_rectangle"
              android:textColor="@color/white"
              android:layout_alignParentRight="true"
              android:layout_marginRight="10dp"
              />

      </RelativeLayout>
       <View
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="10dp"
           android:background="@color/line"
           />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="30dp"
           android:gravity="center_vertical"
           android:orientation="horizontal"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="回答"
               android:layout_marginLeft="10dp"
               />
            <TextView
                android:id="@+id/answer_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_color"
                android:text="6"
                android:layout_marginLeft="10dp"

                />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="听懂"
                 android:layout_marginLeft="10dp"

                 />
           <TextView
               android:id="@+id/hear_num"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/main_color"
               android:text="6"
               android:layout_marginLeft="10dp"

               />
       </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="1px"
           android:background="@color/line"
           />
        <com.umiwi.ui.view.NoScrollListview

            android:id="@+id/noscroll_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            >
            <ProgressBar
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载更多..."
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
    </LinearLayout>

    </com.umiwi.ui.view.MonitorScrollView>
</LinearLayout>