<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="horizontal"
    android:background="@color/white">
    <com.umiwi.ui.view.XCRoundRectImageView
        android:id="@+id/iv_author"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_height="90dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="15sp"
                android:text="标题"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/main_color"
                android:layout_centerVertical="true"
                android:text="$9.9"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/black_a8"
                android:layout_centerVertical="true"
                android:text="副标题"
                android:lines="1"
                android:ellipsize="end"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_starttime"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_color"
                android:layout_centerVertical="true"
                android:background="@drawable/retangle_ring_maincolor"
                android:textSize="12sp"
                android:text="04月26日 16:23开始"/>
            <ImageView
                android:id="@+id/iv_already_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/already_off"/>
            <TextView
                android:id="@+id/tv_starttime1"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_already_off"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black_a8"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:text="04月26日 16:23开始"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_color"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:text="累计收益"/>
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_partakenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_a8"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:text="0参与"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>