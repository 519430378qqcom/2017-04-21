<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@color/umiwi_white"
    android:padding="12dp">

    <ImageView
        android:id="@+id/myinfo_iv_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" />

    <TextView
        android:id="@+id/myinfo_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/icon_iv"
        android:gravity="center_vertical"
        android:textColor="@color/umiwi_gray_3"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/myinfo_tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/myinfo_tv_title"
        android:gravity="center_vertical"
        android:textColor="@color/umiwi_gray_3"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/myinfo_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/myinfo_iv_"
        android:gravity="center_vertical"
        android:textColor="@color/umiwi_gray_9"
        android:textSize="14sp" />

</RelativeLayout>