<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_expert_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_tutor_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="精选专题"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <!--android:text="行家推荐"-->
            <!--<TextView-->
            <!--android:id="@+id/tv_audio_more"-->
            <!--android:padding="5dp"-->
            <!--android:drawableRight="@drawable/category_hot"-->
            <!--android:text="更多"-->
            <!--android:drawablePadding="5dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:paddingBottom="10dp"-->
            <!--android:paddingTop="10dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--/>-->
            <TextView
                android:id="@+id/title_huan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="换一批"
                android:padding="3dp"
                android:textColor="#adadad"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/menu"
            android:background="#adadad" />
    </LinearLayout>

    <com.umiwi.ui.fragment.home.recommend.widget.ListViewInScroll
        android:id="@+id/lv_home_expert_rec"
        android:layout_width="match_parent"
        android:divider="@null"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:id="@+id/rl_tutor_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tutor_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="查看全部"
            android:textColor="@color/main_color"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>