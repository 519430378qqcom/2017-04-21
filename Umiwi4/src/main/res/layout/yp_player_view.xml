<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_view_all"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <com.umiwi.video.widget.FitScaleImageView
        android:id="@+id/player_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:src="@drawable/player_canvas" />

    <include
        layout="@layout/yp_player_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/player_back" />

    <FrameLayout
        android:id="@+id/player_media_controller_panel_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/player_back"></FrameLayout>


</RelativeLayout>