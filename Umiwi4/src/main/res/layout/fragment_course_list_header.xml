<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/umiwi_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/circle_gray"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="按排序：" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checkedButton="@+id/newest"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/newest"
                style="@style/orangebuttonstyle"
                android:padding="8dp"
                android:text="最新"></RadioButton>

            <RadioButton
                android:id="@+id/hot"
                style="@style/orangebuttonstyle"
                android:padding="8dp"
                android:text="最热"></RadioButton>

            <RadioButton
                android:id="@+id/high_opinion"
                style="@style/orangebuttonstyle"
                android:padding="8dp"
                android:text="好评"></RadioButton>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/circle_gray"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="按权益：" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/all_course"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/all_course"
                style="@style/orangebuttonstyle"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:text="全部"></RadioButton>

            <RadioButton
                android:id="@+id/free_course"
                style="@style/orangebuttonstyle"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="免费课程"></RadioButton>

            <RadioButton
                android:id="@+id/gift_course"
                style="@style/orangebuttonstyle"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="精品课程"></RadioButton>

            <RadioButton
                android:id="@+id/vip_course"
                style="@style/orangebuttonstyle"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="钻石课程"></RadioButton>
        </RadioGroup>
    </LinearLayout>

</LinearLayout>