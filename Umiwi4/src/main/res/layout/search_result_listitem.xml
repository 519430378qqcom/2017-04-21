<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/common_padding_left"
    android:paddingRight="@dimen/common_padding_right"
    android:paddingTop="8dip"
    android:paddingBottom="8dip"
    android:background="@color/umiwi_white"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="96dip"
        android:layout_height="72dip"
        android:layout_centerVertical="true"
        android:layout_marginBottom="4dip"
        android:background="#c9c9c9"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dip"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            style="@style/Widget.TextView.Item.Title"
            android:lines="1"
            android:ellipsize="marquee" />

        <TextView
            android:id="@+id/authorname"
            style="@style/Widget.TextView.Item.Subtitle"
            android:ellipsize="marquee"
            android:lines="2" />
    </LinearLayout>

    <ImageView
        android:id="@+id/coupon_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/recommend_new"
        android:scaleType="centerCrop"
        android:visibility="gone" />

</LinearLayout>