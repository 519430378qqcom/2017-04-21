<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/competence_return_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:background="@drawable/ic_action_bar_return" />

    <LinearLayout
        android:id="@+id/competence_middle_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ijk_transparent_dark"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/middle_competence_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/middle_competence_button"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:text="此课程是钻石会员专亨课程，支付后可继续观看！"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/middle_competence_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_red_selector"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="4dp"
            android:text="开通钻石会员"
            android:textColor="@color/umiwi_white"
            android:textSize="18sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/middle_play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/video_item_play_bg"
            android:gravity="center" />


    </LinearLayout>

</FrameLayout>