<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/voice_img"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_icon_default"
            />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               >
           <RelativeLayout
               android:layout_marginTop="10dp"
               android:layout_marginLeft="5dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView

                   android:id="@+id/title"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="音频"
                   android:layout_centerVertical="true"
                   android:textColor="@color/black_alpf"
                   />
               <TextView
                   android:visibility="gone"
                   android:id="@+id/cat"
                   android:layout_marginLeft="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="人际关系"
                   android:textColor="@color/main_color"
                   android:textSize="10sp"
                   android:padding="2dp"
                   android:background="@drawable/tv_corner"
                   android:layout_centerVertical="true"
                   android:layout_toRightOf="@id/title"
                   />
               <TextView
                   android:id="@+id/price"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="29"
                   android:textColor="@color/main_color"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="10dp"

                   />
           </RelativeLayout>
               <RelativeLayout
                   android:paddingBottom="5dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/playtime"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="6"
                       />
                    <TextView
                        android:id="@+id/dian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="."
                        android:layout_toRightOf="@id/playtime"

                        />
                   <TextView
                       android:id="@+id/watchnum"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="6次"
                       android:layout_toRightOf="@id/dian"
                       />
                    <TextView
                        android:id="@+id/process"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已播放"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        />
               </RelativeLayout>
           </LinearLayout>

    </LinearLayout>



</LinearLayout>