<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectable_background_white_gray"
    android:padding="8dip" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="96dip"
        android:layout_marginLeft="7dp"
        android:layout_height="72dip"
        android:layout_centerVertical="true"
        android:layout_marginBottom="4dip"
        android:background="#c9c9c9"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            style="@style/Widget.TextView.Item.Title"
            android:ellipsize="marquee"
            android:lines="1" />

        <TextView
            android:id="@+id/authorname"
            style="@style/Widget.TextView.Item.Subtitle"
            android:ellipsize="marquee"
            android:lines="2" />
    </LinearLayout>

    <ImageView
        android:id="@+id/coupon_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/recommend_new"
        android:scaleType="centerCrop"
        android:visibility="gone" />

</RelativeLayout>