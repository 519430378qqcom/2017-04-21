<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/user_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableBottom="@drawable/user_test_xian"
        android:gravity="center_horizontal"
        android:textSize="26sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/user_title_o"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_title"
        android:gravity="center_horizontal"
        android:textColor="@color/umiwi_gray_6"
        android:textSize="18sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/user_prev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/uesr_test_button_bg"
            android:gravity="center_horizontal"
            android:text="上一页"
            android:textSize="26sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/user_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/uesr_test_button_bg"
            android:gravity="center_horizontal"
            android:text="马上学习"
            android:textSize="26sp"
            android:visibility="gone" />
    </LinearLayout>

    <GridView
        android:id="@+id/girdview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_b"
        android:layout_below="@+id/user_title_o"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center_horizontal"
        android:horizontalSpacing="10dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:transcriptMode="alwaysScroll"
        android:verticalSpacing="20dp"
        android:visibility="gone" >
    </GridView>

    <TextView
        android:id="@+id/user_compter_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.5"
        android:textColor="@color/umiwi_gray_6"
        android:textSize="18sp" />

</RelativeLayout>