<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/umiwi_a_f_bg_style"
    android:clickable="true"
    android:orientation="vertical" >

    <include layout="@layout/toolbar_actionbar" />

    <EditText
        android:id="@+id/old_password_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_et_white_bg"
        android:hint="请输入原密码"
        android:textColor="@color/umiwi_gray_6"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:textSize="18sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/new_password_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/login_et_white_bg"
        android:hint="请输入新密码"
        android:textColor="@color/umiwi_gray_6"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:textSize="18sp" >
    </EditText>

    <EditText
        android:id="@+id/password_repeat_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/login_et_white_bg"
        android:hint="请再次输入新密码"
        android:textColor="@color/umiwi_gray_6"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:textSize="18sp" >
    </EditText>

    <TextView
        android:id="@+id/commit_button"
        style="@style/Widget.Button.RedButton"
        android:layout_width="fill_parent"
        android:layout_margin="10dp"
        android:text=" 提     交 " />

</LinearLayout>