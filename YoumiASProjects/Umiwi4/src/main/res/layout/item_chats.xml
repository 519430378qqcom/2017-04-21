<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectable_background_white_gray"
    android:padding="8dip" >

    <LinearLayout
        android:id="@+id/layout_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/title"
            style="@style/Widget.TextView.Item.Title"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:lines="1" />

        <ImageView
            android:id="@+id/coupon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/category_hot" />
    </LinearLayout>

    <TextView
        android:id="@+id/authorname"
        style="@style/Widget.TextView.Item.Subtitle"
        android:layout_below="@+id/layout_ll"
        android:layout_marginLeft="26dp"
        android:ellipsize="marquee"
        android:lines="1"
        android:textSize="12dp" />

</RelativeLayout>