<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/umiwi_a_f_bg_style"
    android:background="@color/umiwi_white"
    android:padding="8dp" >

    <LinearLayout
        android:id="@+id/mycard_ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mycard_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="8dp"
            android:text="兑换号码："
            android:textColor="@color/umiwi_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mycard_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="8dp"
            android:text=""
            android:textColor="@color/umiwi_black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mycard_ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mycard_ll1"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mycard_time_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换时间："
            android:textColor="@color/umiwi_gray_6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mycard_usedtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="2010-09-09"
            android:textColor="@color/umiwi_gray_6"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mycard_ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mycard_ll2"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换商品："
            android:textColor="@color/umiwi_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mycard_product1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换商品："
            android:textColor="@color/umiwi_green"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>