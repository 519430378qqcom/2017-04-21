<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:background="@drawable/selectable_background_white_gray"
    android:clickable="true"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/video_stuts_image_view"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/video_item_pause_bg"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/title_text_view"
            style="@style/Widget.TextView.Item.Title"
            android:paddingLeft="3.8dip"
            android:paddingRight="2dip" />

        <TextView
            android:id="@+id/subtitle_text_view"
            style="@style/Widget.TextView.Item.Subtitle"
            android:paddingLeft="5.5dip"
            android:paddingRight="2dip" />
    </LinearLayout>

</LinearLayout>