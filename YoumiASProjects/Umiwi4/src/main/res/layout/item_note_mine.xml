<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/content_image_view"
            android:layout_width="96dip"
            android:layout_height="72dip"
            android:layout_alignParentTop="true"
            android:background="#c9c9c9"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/content_image_view"
            android:layout_marginBottom="4dip"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/content_image_view" >

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/umiwi_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/content_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/username"
                android:textColor="@color/umiwi_gray_9"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/moreView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/content_text_view"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/content_text_view"
                android:text="全文"
                android:textColor="@color/color_primary"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="8dp"
        android:background="@color/umiwi_gray_e" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" >

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="0000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/share_note_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="10dip"
            android:drawableLeft="@drawable/share_white"
            android:drawablePadding="0dip"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/umiwi_gray_9"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>