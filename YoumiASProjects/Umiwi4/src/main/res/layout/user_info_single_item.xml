<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center" >

    <com.umiwi.ui.view.RoundButton
        android:id="@+id/round_button_one"
        android:layout_width="@dimen/round_dp"
        android:layout_height="@dimen/round_dp"
        android:layout_centerInParent="true"
        app:cb_color="@android:color/transparent"
        app:cb_pressed_ring_width="0.0dp" />

    <com.umiwi.ui.view.RoundButton
        android:id="@+id/round_button"
        android:layout_width="@dimen/round_dp"
        android:layout_height="@dimen/round_dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:cb_color="@android:color/transparent"
        app:cb_pressed_ring_width="8dip" />

    <CheckedTextView
        android:id="@+id/checked_text"
        android:layout_width="@dimen/round_dp"
        android:layout_height="@dimen/round_dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/umiwi_white" />

</RelativeLayout>