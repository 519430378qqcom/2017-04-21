<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/sinaweibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/logo_sinaweibo"
        android:gravity="center_horizontal"
        android:text="新浪微博"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/wechatfriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/logo_wechat"
        android:gravity="center_horizontal"
        android:text="微信好友"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/wechatmoments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/logo_wechatmoments"
        android:gravity="center_horizontal"
        android:text="微信朋友圈"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/logo_qq"
        android:gravity="center_horizontal"
        android:text="QQ"
        android:textColor="@color/black"
        android:textSize="14sp" />

</LinearLayout>