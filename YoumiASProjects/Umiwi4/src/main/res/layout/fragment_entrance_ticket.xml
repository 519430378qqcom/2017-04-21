<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/umiwi_a_f_bg_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/toolbar_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/login_et_white_bg"
            android:gravity="center_vertical"
            android:paddingEnd="10dip"
            android:paddingLeft="10dp"
            android:paddingStart="10dip"
            android:singleLine="true"
            android:text="姓名:"
            android:textColor="@color/umiwi_black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/entrance_ticket_username_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/login_et_white_bg"
            android:hint="请输入姓名"
            android:imeOptions="actionNext"
            android:paddingEnd="5dip"
            android:paddingLeft="5dp"
            android:paddingStart="5dip"
            android:singleLine="true"
            android:textColor="@color/umiwi_black"
            android:textColorHint="#ffbbbbbb"
            android:textCursorDrawable="@null"
            android:textSize="14sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/login_et_white_bg"
            android:gravity="center_vertical"
            android:paddingEnd="10dip"
            android:paddingLeft="10dp"
            android:paddingStart="10dip"
            android:singleLine="true"
            android:text="电话:"
            android:textColor="@color/umiwi_black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/entrance_ticket_phone_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/login_et_white_bg"
            android:hint="请输入电话号码"
            android:imeOptions="actionNext"
            android:inputType="phone|textPhonetic"
            android:maxLength="11"
            android:paddingEnd="5dip"
            android:paddingLeft="5dp"
            android:paddingStart="5dip"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColor="@color/umiwi_black"
            android:textColorHint="#ffbbbbbb"
            android:textCursorDrawable="@null"
            android:textSize="14sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/login_et_white_bg"
            android:gravity="center_vertical"
            android:paddingEnd="10dip"
            android:paddingLeft="10dp"
            android:paddingStart="10dip"
            android:singleLine="true"
            android:text="地址:"
            android:textColor="@color/umiwi_black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/entrance_ticket_address_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/login_et_white_bg"
            android:hint="请输入地址"
            android:imeOptions="actionGo"
            android:paddingEnd="5dip"
            android:paddingLeft="5dp"
            android:paddingStart="5dip"
            android:singleLine="true"
            android:textColor="@color/umiwi_black"
            android:textColorHint="#ffbbbbbb"
            android:textCursorDrawable="@null"
            android:textSize="14sp" >
        </EditText>
    </LinearLayout>

    <TextView
        android:id="@+id/commit_textview"
        style="@style/Widget.Button.RedButton"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:text="提交" />

    <TextView
        android:id="@+id/call_customer_service_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp"
        android:autoLink="phone"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="客服电话 : 010-85801860"
        android:textColor="@color/umiwi_black"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>