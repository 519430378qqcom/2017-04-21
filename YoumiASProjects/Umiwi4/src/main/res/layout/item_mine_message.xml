<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectable_background_white_gray"
    android:padding="8dip">

    <cn.youmi.framework.view.CircleImageView
        android:id="@+id/image"
        android:layout_width="@dimen/round_image"
        android:layout_height="@dimen/round_image"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        app:ci_border_color="@color/umiwi_orange"
        app:ci_border_width="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/Widget.TextView.Item.Title"
            android:ellipsize="marquee"
            android:lines="1" />

        <TextView
            android:id="@+id/authorname"
            style="@style/Widget.TextView.Item.Subtitle"
            android:singleLine="false" />
    </LinearLayout>


</RelativeLayout>